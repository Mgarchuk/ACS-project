@model LoginModel

<h3>Страница ввода логина</h3>
<div class="mt-3">
    <p class="text-danger">
        @Html.ValidationMessage("wrong")
    </p>
</div>

<div class="row" mb-5>
    <form asp-action="Index" method="post" class="form-horizontal">
        <div class="form-group" style="width: auto">
            <label asp-for="Login"></label>
            <div class="col-md-5">
                <input asp-for="Login" class="form-control" style="width: auto" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" style="width: auto">
            <label asp-for="Password"></label>
            <div class="col-md-5">
                <input asp-for="Password" class="form-control" style="width: auto" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <input class="btn-success btn-lg" type="submit" value="Вход" />
    </form>
</div>